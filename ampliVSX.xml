<grammar version="1.0" xml:lang="fr-FR" mode="voice" root="ruleampliVSX" xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0">
  <rule id="ruleampliVSX" scope="public">
    <tag>out.action=new Object(); </tag>
    
    <item weight="2">SARAH</item>
    <one-of>
      <item>allume lampli<tag>out.action.val="power_on";</tag></item>
      <item>allume l'ampli<tag>out.action.val="power_on";</tag></item>
      <item>demarre lampli<tag>out.action.val="power_on";</tag></item>
      
      <item>eteint lampli<tag>out.action.val="power_off";</tag></item>
      <item>eteint l'ampli<tag>out.action.val="power_off";</tag></item>
      <item>ferme lampli<tag>out.action.val="power_off";</tag></item>
      
      <item>monte le son de lampli<tag>out.action.val="volume_up";</tag></item>
      <item>baisse le son de lampli<tag>out.action.val="volume_down";</tag></item>

      <item>coupe le son de lampli<tag>out.action.val="mute_on";</tag></item>
      <item>remet le son de lampli<tag>out.action.val="mute_off";</tag></item>
    </one-of>
    <tag>out.action._attributes.uri="http://127.0.0.1:8080/sarah/ampliVSX";</tag>
  </rule>
</grammar>
